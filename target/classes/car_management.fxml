<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Gestion des Voitures" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 18px;"/>
    <TableView fx:id="carTable" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Modèle" fx:id="modelColumn"/>
            <TableColumn text="Louée" fx:id="isRentedColumn"/>
        </columns>
    </TableView>
    <Button text="Ajouter" onAction="#handleAddCar" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Modifier" onAction="#handleUpdateCar" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Supprimer" onAction="#handleDeleteCar" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
</GridPane>
