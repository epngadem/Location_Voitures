<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Gestion des Réservations" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 18px;"/>
    <TableView fx:id="reservationTable" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <columns>
            <TableColumn text="ID Réservation" fx:id="reservationIdColumn"/>
            <TableColumn text="Nom" fx:id="nameColumn"/>
            <TableColumn text="Modèle" fx:id="modelColumn"/>
            <TableColumn text="Statut" fx:id="statusColumn"/>
        </columns>
    </TableView>
    <Button text="Ajouter une Réservation" onAction="#handleAddReservation" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Supprimer" onAction="#handleDeleteReservation" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
